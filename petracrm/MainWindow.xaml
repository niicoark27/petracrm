        </DockPanel>
        <StackPanel HorizontalAlignment="Left" Height="64" Margin="10,0,0,0" VerticalAlignment="Top" Width="668">
            <Image HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="127" Source="Resources\images\petrablk.png"/>
        </StackPanel>

    </Grid>
</Window>
