                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem x:Name="btnOperationsAdmin" Header="Operations Admin" Icon="" Click="btnOperationsAdmin_Click"/>

                <MenuItem x:Name="btnTickets" Header="Tickets" Icon="" Click="btnTickets_Click"/>

            </Menu>
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
